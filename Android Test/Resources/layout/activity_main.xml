<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="#050605"
    android:textColor="#e5ebe6"
    >
        <TextView
        android:id="@+id/tvInputResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="#9fcba4"
        android:textColor="#e5ebe6"
        android:textSize="36sp"
        android:text="0"
        />
        <TextView
        android:id="@+id/tvOutputResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#79a495"
        android:background="#415d50"
        android:textColor="#e5ebe6"
        android:textSize="16sp"
        />
        <TableLayout 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:background="#0d0e0d"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        >
            <TableRow      
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"            
            android:weightSum="100"
            >
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnAllClear"
                android:layout_column="0"   
                android:layout_weight="25"
                android:text="AC"
                android:textSize="25dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:id="@+id/btnFlipPolarity"   
                android:layout_column="1"
                android:layout_weight="25"     
                android:text="+/-"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"   
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnModulus" 
                android:layout_column="2"
                android:layout_weight="25"
                android:text="%"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"   
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnDivide" 
                android:layout_column="3"
                android:layout_weight="25"
                android:text="/"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"   
                android:textColor="#e5ebe6"
                />
        </TableRow>
            <TableRow 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="100"
            >
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btn7" 
                android:layout_column="0"   
                android:layout_weight="25"
                android:text="7"
                android:textSize="25dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:id="@+id/btn8"
                android:layout_column="1"
                android:layout_weight="25"     
                android:text="8"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btn9" 
                android:layout_column="2"
                android:layout_weight="25"
                android:text="9"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnMultiply" 
                android:layout_column="3"
                android:layout_weight="25"
                android:text="X"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
        </TableRow>
            <TableRow 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="100"
            >
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btn4" 
                android:layout_column="0"   
                android:layout_weight="25"
                android:text="4"
                android:textSize="25dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:id="@+id/btn5"
                android:layout_column="1"
                android:layout_weight="25"     
                android:text="5"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btn6" 
                android:layout_column="2"
                android:layout_weight="25"
                android:text="6"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnSubtraction" 
                android:layout_column="3"
                android:layout_weight="25"
                android:text="-"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
        </TableRow>
            <TableRow 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="100"
            >
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btn1" 
                android:layout_column="0"   
                android:layout_weight="25"
                android:text="1"
                android:textSize="25dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:id="@+id/btn2"
                android:layout_column="1"
                android:layout_weight="25"     
                android:text="2"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btn3" 
                android:layout_column="2"
                android:layout_weight="25"
                android:text="3"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnAddition" 
                android:layout_column="3"
                android:layout_weight="25"
                android:text="+"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
        </TableRow>
            <TableRow 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:weightSum="100"
            >
                <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/btn0"
                android:layout_column="0"
                android:layout_weight="50"
                android:text="0"
                android:textSize="25dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0px"
                android:layout_height="0px"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnDot" 
                android:layout_column="2"
                android:layout_weight="25"
                android:text="."
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
                <Button 
                android:layout_height="80dp" 
                android:layout_width="0dp" 
                android:id="@+id/btnEquals" 
                android:layout_column="3"
                android:layout_weight="25"
                android:text="="
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#171d1a"
                android:textColor="#e5ebe6"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>